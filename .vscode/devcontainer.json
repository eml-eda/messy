{
    "remoteUser": "docker_user",
    // Add bash as default shell
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "icon": "terminal-bash"
                    }
                },
                "python.defaultInterpreterPath": "/usr/bin/python3"
            },
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "ms-python.vscode-pylance",
                "ms-python.debugpy"
            ]
        }
    }
}